<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginTop="5dp"
              android:layout_marginLeft="5dp"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/divide_yellow"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/baidu_safe"
            android:layout_marginLeft="10dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_appName_market"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="App名称"
                android:textSize="16sp"
                />
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:numStars="5"
                android:isIndicator="true"
                android:rating="3.5"
                android:stepSize="0.5"
                style="?android:ratingBarStyleSmall"
                />
            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/tv_appLabel_market"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="借钱快"
                    />
            </TableLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right_arrow_icon"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="35.3万人已申请"
                android:layout_centerVertical="true"
                android:maxLines="1"
                />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        >
        <TextView
            android:id="@+id/tv_market_appInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="日息0.56%,操作简单，费用低"
            android:maxLines="1"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"
            />

    </LinearLayout>


</LinearLayout>